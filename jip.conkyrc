${offset 6}${color3}wlp3s0 > ${wireless_essid wlp3s0}
${offset 62}${color8}> signal
${offset 191}${voffset -18}${wireless_link_bar 12,240 wlp3s0} ${alignr}${offset -880}${wireless_link_qual_perc wlp3s0}%
